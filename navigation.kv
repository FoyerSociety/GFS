#:import get_color_from_hex kivy.utils.get_color_from_hex

Screen:
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        title: "GFS"
                        left_action_items: [["menu", lambda x: app.rail_open()]]
                        right_action_items: [["bell", lambda x: app.callback_1()], ["dots-vertical", lambda x: app.callback_2()]]
                        elevation:8

                    MDBoxLayout:
                        MDNavigationRail:
                            id: rail
                            md_bg_color: get_color_from_hex("##e6eced")
                            color_normal: get_color_from_hex("#4f4f4f")
                            color_active: get_color_from_hex("#d63904")
                            visible: "Unlabeled"
                            
                        
                            MDNavigationRailItem:
                                icon: "home"
                                
                            MDNavigationRailItem:
                                icon: "food"
                               
                            MDNavigationRailItem:
                                icon: "broom"
                            
                            MDNavigationRailItem:
                                icon: "currency-eur"
                            
                            MDNavigationRailItem:
                                icon: "flash"
                                
                            MDNavigationRailItem:
                                icon: "backup-restore"